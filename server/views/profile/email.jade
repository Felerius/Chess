extends ../templates/centercolumn

block inPageTitle
  | Email login

block columnContent
  form.form-horizontal.clearfix(action='/profile/email', method='post')
    .form-group
      label.col-sm-3.control-label(for='email') Email
      .col-sm-9
        input#email.form-control(type='email', name='email', value=user.auth.local.email, required, autofocus)
    .form-group
      label.col-sm-3.control-label(for='password') Password
      .col-sm-9
        input#password.form-control(type='password', name='password', placeholder='Keep password')
    .btn-toolbar.pull-right
      a.btn.btn-default(href='/profile') Cancel
      button.btn.btn-primary(type='submit') Save

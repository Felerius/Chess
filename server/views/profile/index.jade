extends ../templates/centercolumn

block onPageTitle
  | Profile

block columnContent
  .panel.panel-default
    .panel-heading.clearfix
      // See http://stackoverflow.com/q/18742086 on why pull-left is needed
      h3.panel-title.panel-title-with-a.btn-defaults.pull-left Common
      a.btn.btn-default.btn-xs.pull-right(href='/profile/common')
        span.fa.fa-pencil
    .panel-body
      form.form-horizontal
        .form-group
          label.col-sm-3.control-label Username
          .col-sm-9
            p.form-control-static= user.displayName

  .panel.panel-default
    .panel-heading.clearfix
      if user.auth.local.email
        // See above on why pull-left
        h3.panel-title.panel-title-with-a.btn-defaults.pull-left Email login
        .btn-toolbar.pull-right
          a.btn-default.btn.btn-xs(href='/profile/email')
            span.fa.fa-pencil
          a.btn-default.btn.btn-xs
            span.fa.fa-remove
      else
        h3.panel-title Local login
    .panel-body
      if user.auth.local.email
        form.form-horizontal
          .form-group
            label.col-sm-3.control-label Email
            .col-sm-9
              p.form-control-static= user.auth.local.email
          .form-group
            label.col-sm-3.control-label Password
            .col-sm-9
              p.form-control-static ********
      else
        a.btn-default.btn.btn-default Enable

  .panel.panel-default
    .panel-heading.clearfix
      if user.auth.google.id
        // See above on why pull-left
        h3.panel-title.panel-title-with-a.btn-defaults.pull-left Google login
        a.btn-default.btn.btn-xs.pull-right
          span.fa.fa-remove
      else
        h3.panel-title Google login
    .panel-body
      if user.auth.google.id
        | Connected to
        = ' ' + user.auth.google.accountName
      else
        a.btn-default.btn.btn-danger
          span.fa.fa-google-plus
          |  Connect

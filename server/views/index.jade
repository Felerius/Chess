extends ./bootstrapbase

block content
  .jumbotron.text-center
    h1 Chess
    .btn-toolbar
      if user
        a.btn.btn-default(href='/play') Play
      else
        a.btn.btn-default(href='/auth/login')
          span.fa.fa-user
          |  Login
        a.btn.btn-default(href='/auth/register')
          span.fa.fa-user
          |  Register
        a.btn.btn-danger(href='/auth/google')
          span.fa.fa-google-plus
          |  Google

extends templates/common

block content
  .jumbotron.text-center
    h1 Chess
    .btn-toolbar
      if user
        a.btn.btn-default(href='/play') Play
      else
        a.btn.btn-default(href='/auth/email/login')
          i.fa.fa-user
          |  Login
        a.btn.btn-default(href='/auth/email/register')
          i.fa.fa-user
          |  Register
        a.btn.btn-danger(href='/auth/google')
          i.fa.fa-google-plus
          |  Google

extends ../../templates/centercolumn

block onPageTitle
  i.fa.fa-sign-in
  |  Register

block columnContent
  if message && message.length > 0
    .alert.alert-danger= message

  form.clearfix(action='/auth/email/register', method='post')
    .form-group
      input.form-control(type='text', name='name', value=name, placeholder='Name', required, autofocus)
    .form-group
      input.form-control(type='email', name='email', value=email, placeholder='Email', required)
    .form-group
      input.form-control(type='password', name='password', placeholder='Password', required)
    button.btn.btn-primary.pull-right(type='submit') Register

  hr

  p Already have an account? <a href="/auth/email/login">Login</a>.

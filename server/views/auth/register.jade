extends ../bootstrapbase

block content
  .col-sm-offset-3.col-sm-6.col-md-offset-4.col-md-4
    h1
      span.fa.fa-sign-in
      |  Register

    if message && message.length > 0
      .alert.alert-danger= message

    form(action='/auth/register', method='post')
      .form-group
        input.form-control(type='text', name='name', value=name, placeholder='Name', required, autofocus)
      .form-group
        input.form-control(type='email', name='email', value=email, placeholder='Email', required)
      .form-group
        input.form-control(type='password', name='password', placeholder='Password', required)
      button.btn.btn-warning.btn-lg(type='submit') Register

    hr

    p Already have an account? <a href="/auth/login">Login</a>.

extends ../templates/centercolumn

block onPageTitle
  i.fa.fa-sign-in
  |  Login

block columnContent
  if message && message.length > 0
    .alert.alert-danger= message

  form.clearfix(action='/auth/login', method='post')
    .form-group
      input.form-control(type='email', name='email', value=email, placeholder='Email', required, autofocus)
    .form-group
      input.form-control(type='password', name='password', placeholder='Password', required)
    button.btn.btn-primary.pull-right(type='submit') Login

  hr

  p Don't have an account? <a href="/auth/register">Register</a>.

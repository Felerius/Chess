extends ../bootstrapbase

block content
  .col-sm-offset-3.col-sm-6.col-md-offset-4.col-md-4
    h1
      span.fa.fa-sign-in
      |  Login

    if message && message.length > 0
      .alert.alert-danger= message

    form(action='/auth/login', method='post')
      .form-group
        input.form-control(type='email', name='email', value=email, placeholder='Email', required, autofocus)
      .form-group
        input.form-control(type='password', name='password', placeholder='Password', required)
      button.btn.btn-warning.btn-lg(type='submit') Login

    hr

    p Don't have an account? <a href="/auth/register">Register</a>.
